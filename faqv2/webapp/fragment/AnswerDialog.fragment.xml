<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:core="sap.ui.core">

    <Dialog
        title="Responder pregunta"
        draggable="true"
        resizable="true">

        <VBox class="sapUiSmallMargin" width="100%">
            <Text text="{/selected/question}" wrapping="true" />

            <TextArea
                value="{/selected/answer}"
                placeholder="Escriba la respuesta aquÃ­"
                rows="5"
                width="100%" />
        </VBox>

        <beginButton>
            <Button
                text="Guardar"
                type="Emphasized"
                press=".onSaveAnswer" />
        </beginButton>

        <endButton>
            <Button
                text="Cancelar"
                press=".onCloseDialog" />
        </endButton>

    </Dialog>
</core:FragmentDefinition>
